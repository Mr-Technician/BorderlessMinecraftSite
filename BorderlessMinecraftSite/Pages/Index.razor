<MudContainer MaxWidth="MaxWidth.Large" Class="my-16">
    <div class="mb-16">
        <MudText Typo="Typo.h3" Align="Align.Center">Borderless Minecraft</MudText>
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom>Run Minecraft as a Borderless Window</MudText>
        @*<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>
