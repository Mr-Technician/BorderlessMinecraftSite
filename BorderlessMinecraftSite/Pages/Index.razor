<MudContainer Style="padding-top:15vh;padding-bottom:15vh; max-width:100vw;background-image: url('background.png'); background-size: cover; background-position: center center;">
    <MudContainer MaxWidth="MaxWidth.Large" Class="my-16" Style="color:rgba(255,255,255, 0.70)">
        <div class="mb-16">
            <MudText Typo="Typo.h3" Align="Align.Center">Borderless Minecraft</MudText>
            <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom>Run Minecraft as a Borderless Window</MudText>
            @*<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>
                <MudAlert Severity="Severity.Normal" Variant="Variant.Filled">You can find documentation and examples on our website here: <MudLink Href="https://mudblazor.com" Typo="Typo.body2" Color="Color.Inherit"><b>www.mudblazor.com</b></MudLink></MudAlert>*@

            <TypingComponent TypingStrings="@typingText" />
            <MudText Align="Align.Center">
                <MudAvatar Color="Color.Info" Style="height:70px; width:70px; cursor:pointer;" Class="ma-2" onclick="showFeatures()">
                    <MudIcon Icon="@Icons.Filled.ArrowDownward"></MudIcon>
                </MudAvatar>
            </MudText>
        </div>
    </MudContainer>
</MudContainer>



<MudContainer Class="px-0" Style="max-width:100vw">
    <MudPaper id="features" Outlined Class="rounded-0" Style=@($"background:#bdbdbd52")>
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Class="mb-4 mt-2">
                <MudItem xs="12">
                    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom>Features</MudText>
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="mb-4">
                            <MudIcon Icon="@Icons.Filled.AttachMoney" />
                        </MudAvatar>
                        <br />
                        Fullscreen without trapping your cursor
                    </MudText>
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="mb-4">
                            <MudIcon Icon="@Icons.Filled.AttachMoney" />
                        </MudAvatar>
                        <br />
                        Free and Open Source
                    </MudText>
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="mb-4">
                            <MudIcon Icon="@Icons.Filled.AttachMoney" />
                        </MudAvatar>
                        <br />
                        Lightweight
                    </MudText>
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="mb-4">
                            <MudIcon Icon="@Icons.Filled.AttachMoney" />
                        </MudAvatar>
                        <br />
                        Runs in the background
                    </MudText>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudPaper>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudCard Elevation="8" Class="mt-8 pa-4">
        <MudCardContent>
            <MudText Align="Align.Center" Typo="Typo.h6" GutterBottom>
                Like what you see?
            </MudText>
            <MudText Align="Align.Center">
                <MudButton>
                    <MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Info" Link="latest" StartIcon="@Icons.Filled.FileDownload">Download</MudButton>
                </MudButton>
            </MudText>
        </MudCardContent>
    </MudCard>
</MudContainer>




