<MudContainer Class="px-0" Style="max-width:100vw">
    <MudPaper Outlined Class="rounded-0" Style=@($"background:#bdbdbd52")>
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Class="mb-4 mt-2">
                <MudItem xs="12">
                    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom>Features</MudText>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="mb-4">
                            <MudIcon Icon="@Icons.Filled.AttachMoney" />
                        </MudAvatar>
                        <br />
                        Free
                    </MudText>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="mb-4">
                            <MudIcon Icon="@Icons.Filled.AttachMoney" />
                        </MudAvatar>
                        <br />
                        Lightweight
                    </MudText>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="mb-4">
                            <MudIcon Icon="@Icons.Filled.AttachMoney" />
                        </MudAvatar>
                        <br />
                        Runs in the background
                    </MudText>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudPaper>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Align="Align.Center" Class="mt-8">
        <MudButton>
            <MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Info" Link="latest" StartIcon="@Icons.Filled.FileDownload">Download</MudButton>
        </MudButton>
    </MudText>
</MudContainer>




